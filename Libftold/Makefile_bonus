# NAME - COMPILATOR - FLAGS ************************************************** #
NAME			=	libft.a
GCC				=	gcc
FLAGS			=	-Wall -Wextra -Werror

# INCLUDES ******************************************************************* #
INCLUDES_DIR	=	includes

# SRCS *********************************************************************** #
SRCS_DIR		=	srcs/
SRCS_LIST		=	ft_atoi.c	\
				ft_bzero.c	\
				ft_calloc.c	\
				ft_fill_split.c	\
				ft_incharset.c	\
				ft_isalnum.c	\
				ft_isalpha.c	\
				ft_isascii.c	\
				ft_isdigit.c	\
				ft_isprint.c	\
				ft_itoa.c	\
				ft_memccpy.c	\
				ft_memchr.c	\
				ft_memcmp.c	\
				ft_memcpy.c	\
				ft_memmove.c	\
				ft_memset.c	\
				ft_putchar_fd.c	\
				ft_putendl.c	\
				ft_putendl_fd.c	\
				ft_putnbr_fd.c	\
				ft_putstr_fd.c	\
				ft_split.c	\
				ft_strchr.c	\
				ft_strdup.c	\
				ft_strjoin.c	\
				ft_strlcat.c	\
				ft_strlcpy.c	\
				ft_strlen.c	\
				ft_strmapi.c	\
				ft_strncmp.c	\
				ft_strnstr.c	\
				ft_strrchr.c	\
				ft_strtrim.c	\
				ft_substr.c	\
				ft_tolower.c	\
				ft_toupper.c
SRCS_LIST_BONUS =	ft_atoi.c	\
				ft_bzero.c	\
				ft_calloc.c	\
				ft_fill_split.c	\
				ft_incharset.c	\
				ft_isalnum.c	\
				ft_isalpha.c	\
				ft_isascii.c	\
				ft_isdigit.c	\
				ft_isprint.c	\
				ft_itoa.c	\
				ft_memccpy.c	\
				ft_memchr.c	\
				ft_memcmp.c	\
				ft_memcpy.c	\
				ft_memmove.c	\
				ft_memset.c	\
				ft_putchar_fd.c	\
				ft_putendl.c	\
				ft_putendl_fd.c	\
				ft_putnbr_fd.c	\
				ft_putstr_fd.c	\
				ft_split.c	\
				ft_strchr.c	\
				ft_strdup.c	\
				ft_strjoin.c	\
				ft_strlcat.c	\
				ft_strlcpy.c	\
				ft_strlen.c	\
				ft_strmapi.c	\
				ft_strncmp.c	\
				ft_strnstr.c	\
				ft_strrchr.c	\
				ft_strtrim.c	\
				ft_substr.c	\
				ft_tolower.c	\
				ft_toupper.c	\
				ft_lstadd_back_bonus.c	\
				ft_lstadd_front_bonus.c	\
				ft_lstclear_bonus.c	\
				ft_lstdelone_bonus.c	\
				ft_lstiter_bonus.c	\
				ft_lstlast_bonus.c	\
				ft_lstmap_bonus.c	\
				ft_lstnew_bonus.c	\
				ft_lstsize_bonus.c
SRCS			=	$(addprefix $(SRCS_DIR), $(SRCS_LIST))
SRCS_BONUS		=	$(addprefix $(SRCS_DIR), $(SRCS_LIST_BONUS))

# OBJS *********************************************************************** #
OBJS_DIR		=	objs/
OBJS_LIST		=	$(patsubst %.c, %.o, $(SRCS_LIST))
OBJS_LIST_BONUS	=	$(patsubst %.c, %.o, $(SRCS_LIST_BONUS))
OBJS			=	$(addprefix $(OBJS_DIR), $(OBJS_LIST))
OBJS_BONUS		=	$(addprefix $(OBJS_DIR), $(OBJS_LIST_BONUS))

# RULES ********************************************************************** #

.PHONY: all clean fclean re

all: $(NAME)

$(NAME): $(OBJS)
	ar rcs $@ $^

$(OBJS_DIR)%.o: $(SRCS_DIR)%.c
	$(GCC) $(FLAGS) -I $(INCLUDES_DIR) -c $^ -o $@

bonus: $(OBJS_BONUS)
	ar rcs $(NAME) $(OBJS_BONUS)

$(OBJS_DIR)%.o: $(SRCS_DIR)%.c
	$(GCC) $(FLAGS) -I $(INCLUDES_DIR) -c $^ -o $@

clean:
	rm -f $(OBJS_BONUS)

fclean: clean
	rm -f $(NAME)

re: fclean all
